{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@src/*": [
        "./src/*"
      ]
    },
    "jsx": "react"
  },
  "outDir": "./docs",
  "noImplicitAny": false,
  "module": "commonjs",
  "moduleResolution": "node",
  "target": "es5",
  "typeRoots" : [
    "node_modules/@types",
    "src/types"
  ],
  "lib": ["es2015", "dom"]
}
